<h4 class="p-3 mb-2 ms-5 col">
<span class="bg-body-secondary"><b>&nbsp;&nbsp;&nbsp;<%= (@customer.first_name+@customer.last_name) %>さんの会員詳細&nbsp;&nbsp;&nbsp;</b></span>
</h4>

  <div class="row ms-5">
    <div class="col-3">
      <p>会員ID</p>
    </div>
    <div class="col-5">
      <%= @customer.id %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>氏名</p>
    </div>
    <div class="col-5">
      <%= (@customer.first_name+ "　" +@customer.last_name) %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>フリガナ</p>
    </div>
    <div class="col-5">
      <%= (@customer.first_name_kana+ "　" +@customer.last_name_kana) %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>郵便番号</p>
    </div>
    <div class="col-5">
      <%= @customer.postal_code %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>住所</p>
    </div>
    <div class="col-5">
      <%= @customer.address %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>電話番号</p>
    </div>
    <div class="col-5">
      <%= @customer.telephone_number %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>メールアドレス</p>
    </div>
    <div class="col-5">
      <%= @customer.email %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>会員ステータス</p>
    </div>
    <div class="col-5">
      <%= @customer.is_deleted? ? "<span class='text-black-50 bg-white'>退会済み</span>".html_safe : "<span class='text-success'>有効</span>".html_safe %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
    </div>
    <div class="col-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
    </div>
    <div class="col-2">
      <%= link_to "注文履歴一覧を見る", admin_order_path(@customer.id), class: "btn btn-primary" %>
    </div>
