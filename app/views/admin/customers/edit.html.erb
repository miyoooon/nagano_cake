<h4 class="p-3 mb-2 ms-5 col">
<span class="bg-body-secondary"><b>&nbsp;&nbsp;&nbsp;<%= (@customer.first_name+@customer.last_name) %>さんの会員情報編集&nbsp;&nbsp;&nbsp;</b></span>
</h4>

  <%= form_with model:@customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="row ms-5">
    <div class="col-3">
      <p>会員ID</p>
    </div>
    <div class="col-5">
      <%= @customer.id %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>氏名</p>
    </div>
    <div class="col-5">
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>フリガナ</p>
    </div>
    <div class="col-5">
      <%= f.text_field :first_name_kana %>
      <%= f.text_field :last_name_kana %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>郵便番号</p>
    </div>
    <div class="col-5">
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>住所</p>
    </div>
    <div class="col-5">
      <%= f.text_area :address %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>電話番号</p>
    </div>
    <div class="col-5">
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>メールアドレス</p>
    </div>
    <div class="col-5">
      <%= f.text_area :email %>
    </div>
  </div>

  <div class="row ms-5">
    <div class="col-3">
      <p>会員ステータス</p>
    </div>
    <div class="col-3">
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "退会" %>
    </div>

  <div class="row ms-5">
    <div class="col-3">
    </div>
    <div class="col-3">
      <%= f.submit "変更を保存する", class: "btn btn-success" %>
    </div>
  <% end %>
