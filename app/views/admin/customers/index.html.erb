<div class="container">
  <h4 class="p-3 mb-2 ms-5 col">
  <span class="bg-body-secondary"><b>&nbsp;&nbsp;&nbsp;会員一覧&nbsp;&nbsp;&nbsp;</b></span>
  </h4>
  <div class="row justify-content-center mt-5">
    <div class="col-sm-8">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody class="table-group-divider">
          <tr>
            <th scope="row"><%= customer.id %></th>
            <td><%= link_to (customer.first_name+customer.last_name), admin_customer_path(customer.id), class: "text-decoration-underline text-black" %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted? ? "<span class='text-black-50 bg-white'>退会済み</span>".html_safe : "<span class='text-success'>有効</span>".html_safe %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
